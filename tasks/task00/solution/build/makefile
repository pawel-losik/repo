#######################################################
##########        BEGIN User part            ##########
##########       You can change it           ##########
#######################################################
CFLAGS = -Wall -g -I ../person_lib
LDFLAGS = -L../person_lib -lperson
SOURCES = ../src/main.c
LIBS_BUILD = ../person_lib/libperson.so
NAME = prog
#######################################################
##########        END User part              ##########
#######################################################

#######################################################
##########      BEGIN Automation part        ##########
##########     You shouldn't change it       ##########
#######################################################
OBJECTS = $(SOURCES:.c=.o)

all: $(NAME)

$(NAME): $(LIBS_BUILD) $(OBJECTS)
	$(CC) $(OBJECTS) $(LDFLAGS) -o $(NAME)

%.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@

$(LIBS_BUILD):
	make -C $(dir $@)

clean:
	rm -f $(OBJECTS)
	rm -f $(NAME)

clean_all: clean

#######################################################
##########       END Automation part         ##########
#######################################################

